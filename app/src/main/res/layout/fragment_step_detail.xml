<?xml version="1.0" encoding="utf-8"?> <!--Step Details Fragment.-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/simple_exo_player_step_detail"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/thumbnail_iv_frag_step_det"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:contentDescription="@string/show_recipe"
            android:scaleType="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/step_description_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:gravity="start"
            android:textColor="@color/chocolateBrown"
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>